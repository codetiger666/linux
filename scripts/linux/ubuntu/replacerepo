cat << EOF > /etc/apt/sources.list
# 默认注释了源码镜像以提高 apt update 速度，如有需要可自行取消注释
deb https://opentuna.cn/ubuntu/ `lsb_release -c --short` main restricted universe multiverse
# deb-src https://opentuna.cn/ubuntu/ `lsb_release -c --short` main restricted universe multiverse
deb https://opentuna.cn/ubuntu/ `lsb_release -c --short`-updates main restricted universe multiverse
# deb-src https://opentuna.cn/ubuntu/ `lsb_release -c --short`-updates main restricted universe multiverse
deb https://opentuna.cn/ubuntu/ `lsb_release -c --short`-backports main restricted universe multiverse
# deb-src https://opentuna.cn/ubuntu/ `lsb_release -c --short`-backports main restricted universe multiverse
deb https://opentuna.cn/ubuntu/ `lsb_release -c --short`-security main restricted universe multiverse
# deb-src https://opentuna.cn/ubuntu/ `lsb_release -c --short`-security main restricted universe multiverse

# 预发布软件源，不建议启用
# deb https://opentuna.cn/ubuntu/ `lsb_release -c --short`-proposed main restricted universe multiverse
# deb-src https://opentuna.cn/ubuntu/ `lsb_release -c --short`-proposed main restricted universe multiverse

# 自定义源
# mysql-8.0
deb https://opentuna.cn/mysql/apt/ubuntu $(lsb_release -c --short) mysql-8.0
# docker-ce
deb https://opentuna.cn/docker-ce/linux/ubuntu/ $(lsb_release -c --short) stable
# mongodb
# deb https://opentuna.cn/mongodb/apt/ubuntu/ $(lsb_release -c --short) mongodb-org

# 旧版镜像
# python
#deb http://ppa.launchpad.net/deadsnakes/ppa/ubuntu/ $(lsb_release -c --short) main
# php
#deb http://ppa.launchpad.net/ondrej/php/ubuntu $(lsb_release -c --short) main
EOF
apt install gnupg2 -y
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 8C718D3B5072E1F5 7EA0A9C3F273FCD8 BA6932366A755776 4F4EA0AAE5267A6C
apt update